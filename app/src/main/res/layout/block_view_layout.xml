<?xml version="1.0" encoding="utf-8"?>
<com.ifnoif.game2048.BlockView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <FrameLayout
        android:id="@+id/centerBlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/block_margin"
        android:background="@drawable/block_bg2">
        <TextView
            android:id="@+id/blockText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </FrameLayout>
</com.ifnoif.game2048.BlockView>